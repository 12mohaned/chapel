#!/bin/bash


skipZlib="False"
skipSsl="False"
skipConfig="False"

# Check for zlib via pkg-config
# Skip test if not found
zlibcall= $(pkg-config zlib --exists)
zlib=$?
if  [ $zlib = 0 ] ; then
    skipZlib="False"
else
    skipZlib="True"
fi

# Check for openssl via pkg-config
# skip test if not found
opensslCall= $(pkg-config openssl --exists)
openssl=$?

if [ $openssl = 0 ] ; then
    skipSsl="False"
else
    skipSsl="True"
fi

if [ "$CHPL_COMM" = 'none' ] && [ "$CHPL_REGEXP" = 're2' ] ; then
    skipConfig="False"
else
    skipConfig="True"
fi

if [ "$skipZlib" = 'False' ] && [ "$skipSsl" = 'False' ] && [ "$skipConfig" = 'False' ] ; then
    echo "False"
else
    echo "True"
fi


