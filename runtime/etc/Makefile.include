CHPLRTDIR = $(CHAPEL_ROOT)/runtime
include $(CHAPEL_ROOT)/make/Makefile.platform
include $(CHPLRTDIR)/etc/Makefile.macros

all:
	gcc $(CFLAGS) -o $(TMPBINNAME) -I$(CHPLRTDIR)/include/$(PLATFORM) -I$(CHPLRTDIR)/include -L $(CHPLRTDIR)/src/$(PLATFORM) $(CHPLRTDIR)/src/$(PLATFORM)/main.o $(CHPLSRC) -lchpl -lm $(LIBS)
	cp $(TMPBINNAME) $(BINNAME)

