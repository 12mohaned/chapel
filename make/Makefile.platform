#
# OS/ARCH/PLATFORM stuff
#
OS_TYPE = $(shell uname -s | awk '{ split($$1,a,"_"); printf("%s", a[1]);  }')

ARCH = $(shell uname -m)
ifeq ($(ARCH),i386)
	ARCH = x86
endif
ifeq ($(ARCH),i486)
	ARCH = x86
endif
ifeq ($(ARCH),i586)
	ARCH = x86
endif
ifeq ($(ARCH),i686)
	ARCH = x86
endif

#
# PLATFORM is simply the one-word description we'll use for all
# platforms that we run on.
#
ifeq ($(OS_TYPE),CYGWIN)
	PLATFORM=cygwin
endif
ifeq ($(OS_TYPE),SunOS)
	PLATFORM=sun
endif
ifeq ($(OS_TYPE),Linux)
	PLATFORM=linux
endif
ifeq ($(OS_TYPE),FreeBSD)
	PLATFORM=freebsd
endif
ifndef PLATFORM
	PLATFORM=unknown
endif
