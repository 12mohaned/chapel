#!/usr/bin/env perl

use File::Basename;

$utildirname = dirname($0);

$preset_gmp = $ENV{'CHPL_GMP'};

if ($preset_gmp eq "") {
  $targplatform = `$utildirname/platform --target`; chomp($targplatform);
  if ($targplatform eq "xmt") {
    $gmp = 'none';
  } else {
    $gmp = 'gmp';
  }
} else {
  $gmp = $preset_gmp;
}

print "$gmp\n";
exit(0);
