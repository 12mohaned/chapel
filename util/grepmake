#!/bin/bash

if [ -n "${CHPL_HOME:-x}" ] ; then
    chapelDir="$CHPL_HOME"
else
    chapelDir="./"
fi

pushd $chapelDir > /dev/null

find . -maxdepth 1 -name Make\* -print0 | xargs -0 grep -H $@
find make -path "*/.svn" -prune -o -name Make\* -print0 | xargs -0 grep -H $@
find compiler -path "*/.svn" -prune -o -name Make\* -print0 | xargs -0 grep -H $@
find runtime -path "*/.svn" -prune -o -name Make\* -print0 | xargs -0 grep -H $@

popd > /dev/null
