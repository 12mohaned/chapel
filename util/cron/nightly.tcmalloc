#!/usr/bin/env bash
# tcmalloc testing

source $(cd $(dirname $0) ; pwd)/common.bash

# tcmalloc with comm none
export LOGFILE=/tmp/nightly.tcmalloc.$USER.$$.out
export LOGFILE2=$HOME/tmp/nightly.tcmalloc.out

log_info "Testing CHPL_MEM=tcmalloc. Log files: $LOGFILE and $LOGFILE2"

export CHPL_MEM=tcmalloc

$CHPL_HOME/util/cron/nightly -cron -no-futures > $LOGFILE 2>&1
cp $LOGFILE $LOGFILE2 && rm -f $LOGFILE

log_info "Finished."
