#!/usr/bin/env bash
#
# --fast testing
#
# Run only for the examples for now

source $(cd $(dirname $0) ; pwd)/common.bash

LOGFILE=/tmp/nightly.fast.$USER.$$.out
LOGFILE2=$HOME/tmp/nightly.fast.out

log_info "Testing --fast for examples.  Log files: $LOGFILE and $LOGFILE2"
~/chapel/util/cron/nightly -cron -fast -examples > $LOGFILE 2>&1

cp $LOGFILE $LOGFILE2 && rm -f $LOGFILE
