#!/usr/bin/env bash

source $(cd $(dirname $0) ; pwd)/common.bash

log_info Starting $0 on `hostname`.

LOGFILE=$HOME/tmp/nightly.out

log_info "Testing Mac.  Log file: $LOGFILE"

rm -rf /tmp/chapel-cron-$USER-readonly
~/chapel/util/cron/nightly -cron -examples > $LOGFILE 2>&1

# Note: Supressions are only required when we're not restricting
# ourselves to the examples.  In which case, add: -suppress
# Suppressions/darwin.suppress

log_info Finished $0 on `date`.
