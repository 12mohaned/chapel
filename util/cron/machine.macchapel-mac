#!/usr/bin/env bash

source $(cd $(dirname $0) ; pwd)/common.bash
~/chapel/util/cron/nightly.macchapel-mac

export LOGFILE=~/tmp/nightly.macchapel-mac.out
log_info "Testing Mac.  Log file: $LOGFILE"
with_logging $LOGFILE ~/chapel/util/cron/nightly -cron -examples

