#!/usr/bin/perl

$platform = `uname -s`;
chomp($platform);
$platform = lc($platform);
$underscore = index($platform, "_");
if ($underscore != -1) {
    substr($platform, $underscore) = "";
}
if ($platform eq "linux") {
    $machine = `uname -m`;
    chomp($machine);
    if ($machine eq "x86_64") {
	$build64 = $ENV{'BUILD_X86_64'};
	if ($build64 eq "1") {
	    $platform = "linux64";
	}
    }
}

print "$platform\n";
exit(0);


